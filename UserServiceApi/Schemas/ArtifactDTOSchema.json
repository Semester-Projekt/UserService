{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArtifactDTO Schema",
  "type": "object",
  "properties": {
    "MongoId": {
      "type": "string",
      "description": "The unique identifier generated by MongoDB for the artifact."
    },
    "ArtifactID": {
      "type": "integer",
      "description": "The ID of the artifact.",
      "minimum": 1
    },
    "ArtifactName": {
      "type": "string",
      "description": "The name of the artifact."
    },
    "ArtifactDescription": {
      "type": "string",
      "description": "The description of the artifact."
    },
    "CategoryCode": {
      "type": "string",
      "description": "The code representing the category of the artifact."
    },
    "ArtifactOwner": {
      "$ref": "UserSchema.json",
      "description": "A user object representing the owner of the artifact."
    },
    "Estimate": {
      "type": "integer",
      "description": "The estimated value of the artifact.",
      "minimum": 0
    },
    "ArtifactPicture": {
      "type": "string",
      "format": "byte",
      "description": "The picture of the artifact as a byte array."
    },
    "Status": {
      "type": "string",
      "description": "The status of the artifact.",
      "default": "Pending"
    }
  },
  "required": [ "ArtifactID", "ArtifactName", "CategoryCode", "Estimate" ]
}